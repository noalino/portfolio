:root{--color-font:hsl(0, 30%, 10%);--color-font-light:hsla(0, 30%, 10%, 0.6);--color-background:hsl(38, 25%, 94%);--font-headers:'Libre Baskerville', serif;--font-text:'Roboto Serif', serif}*{color:var(--color-font);background-color:var(--color-background);margin:0;padding:0;box-sizing:border-box}h1,h2,h3{font-family:var(--font-headers);font-style:italic}h1 a,h2 a,h3 a{text-decoration:none}p{line-height:1.35em;margin:20px 0}html{height:100%;width:100%}body{display:grid;grid:auto 1fr auto/100%;row-gap:40px;justify-items:center;min-height:100%;max-width:700px;margin:auto;padding:60px 40px;font-family:var(--font-text);font-size:18px}header h1{font-size:2.5em;margin-bottom:10px}header a{text-decoration:none}header nav{font-size:1.2em}main{justify-self:start}main h1{font-size:1.85em;padding:0 0 20px}main h2{font-size:1.35em;padding:15px 0 0}main br{margin:7px 0}main ul li{list-style:none;margin:15px 0}main ul li:before{content:'\00BB \0020'}footer #copyright{padding:15px 0}nav ul,#social-icons{display:flex;justify-content:center}nav ul li,#social-icons li{list-style:none;margin:0 5px}nav ul li a,#social-icons li a{display:flex;padding:5px 10px}nav a{transition:color 100ms}nav a:hover,nav a:focus{color:var(--color-font-light)}#social-icons a svg{width:1.35em;height:1.35em;stroke:var(--color-font);stroke-width:1.5;transition:stroke 100ms}#social-icons a:hover svg,#social-icons a:focus svg{stroke:var(--color-font-light)}@media(max-width:450px){body{font-size:14px;padding:40px 25px}}